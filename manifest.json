{
  "manifest_version": 3,
  "name": "OPX • Hermes",
  "version": "6.7.0",
  "description": "Orquestrador + Relax + UI/hist — estratégias externas",
  "action": { "default_title": "OPX • Hermes" },
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": ["scripting", "storage"],
  "host_permissions": [
    "https://api.binance.com/*",
    "https://stream.binance.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.ebinex.com/*", "https://*.ebinex.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "strategy-data.json",
        "icons/*",
        "audios/*",
        "strategies/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
